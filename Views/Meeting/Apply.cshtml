@model UserInfo

@{
    ViewBag.Title = "Başvuru Formu";
}

<h1 class="h4 text-center">Toplantı Katılım Formu</h1>

<form method="post" action="/meeting/apply">   
    <!--verileri POST yöntemiyle MeetingController içindeki Apply action’ına gönder. -->
    <div asp-validation-summary="All"></div>
    <!-- Model’de oluşan TÜM validation hatalarını tek yerde listeler. -->
<div class="mb-3">
        <label asp-for ="Name" class="form-label">Ad Soyad</label>
        <!-- kullanıcıya yazıyı göstermek için(LABEL) -->
        <input asp-for="Name" class="form-control">
         <!-- kullanıcıan yazıyı almak için(INPUT) -->

    </div>

    <div class="mb-3">
    <label asp-for="Phone" class="form-label">Telefon</label>
    <input asp-for="Phone" class="form-control">
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label">Email</label>
    <input asp-for="Email" class="form-control">
</div>

<div class="mb-3">
    <label asp-for="WillAttend" class="form-label">Katılım Durumu</label>
    <select asp-for="WillAttend" class="form-select">
        <option value="true">Evet, Geliyorum</option>
        <option value="false">Hayır, Gelmiyorum</option>
    </select>
</div>


    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
